/* pages/business/business.wxss */
.user-box{
  display: flex;
  align-items: center;
  font-size: 10px;
  line-height: 14px;
  color: #999999;
}
.user-info{
  margin-left: 20rpx;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user-name{
  color: #333333;
  font-size: 14px;
  font-weight: bold;
}
.pic-box{
  margin: 20rpx 10rpx;
}
.pic-item{
  width: 100%;
  height: 140rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.caption {
  font-weight: bold;
}
.van-grid-item__content{
  padding: 0 !important;
}
.business-con{
  padding:0 20rpx 20rpx;
}
.icon-nav{
  margin: 20rpx 0;
}
.address{
  justify-content: space-between;
  padding: 0 30rpx;
}